<wxs src="../../app.wxs" module="gloval"/>
<!-- 顶部导航栏 -->
<import src="../../component/template/template.wxml"/>
<template is="exist" data="{{title:'发型推荐',topHeight:statusBarHeight}}"/>
<view class="haidstyle box_eight" style="margin-top:{{statusBarHeight+44}}px">
      <view class="recommend box_eight">
        <view class="recommend_model box_eight">
            <!-- <view class="remo_title box_three">
                <image class="remo_title_img" src="../../image/201911212337flower.png"></image>
                <text class="remo_title_text">第一款</text>
            </view> -->
            <view class="remo_picture box_twelve">
                <swiper class="swiper"
                        indicator-dots="{{dots}}"
                        autoplay="{{autoplay}}"
                        interval="{{interval}}">
                    <block wx:for="{{pictureArr}}" wx:key="*this">
                        <swiper-item>
                            <view class="swiper_item box_twelve">
                                <image class="swiper_item_img" src="{{}}" mode="widthFix"></image>
                            </view>
                        </swiper-item>
                    </block>
                </swiper>
            </view>
            <view class="remo_edit box_five">
                <view class="remo_edit_local box_five" bindtap="localLibraryClick">
                    <text class="remo_edit_local_text">本地库</text>
                </view>
                <view class="remo_edit_hair box_five" bindtap="hairstyleLibraryClick">
                    <text class="remo_edit_hair_text">发型库</text>
                </view>
            </view>
            <view class="remo_store">
                <view class="remo_store_words">店铺选择</view>
                <view class="remo_store_count box_two">
                    <view class="remosc_left box_twelve">
                        <image class="remosc_left_img" src="{{}}" mode="widthFix"></image>
                    </view>
                    <view class="remosc_right">
                        <text class="remosc_right_title spill_over">BEAUTRIUM GINZA</text>
                        <view class="remosc_right_address box_one">
                            <view class="remoscra_one box_twelve">
                                <image class="remoscra_one_img" src="../../image/address.png"></image>
                            </view>
                            <view class="remoscra_two">城西银泰店 | 拱墅区丰潭路229号</view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="remo_phone">
                <view class="remo_store_words">设计师联系方式</view>
                <view class="remo_phone_words">电话:<input class="remopw_input" placeholder-class="remopw_place" value="{{phoneValues}}" bindinput="phoneInput"></input></view>
            </view>
            <view class="remo_price">
                <view class="remo_store_words">店铺价位范围:</view>
                <view class="remo_phone_words">剪发：38-60元</view>
                <view class="remo_phone_words">烫/染：38-60-88元</view>
            </view>
            <view class="remo_edit box_five">
                <view class="remo_edit_delete box_five" bindtap="hairstyleClick">
                    <image class="remoed_img" src="../../image/delete.png"></image>
                    <text class="remoed_text">删除</text>
                </view>
                <view class="remo_edit_modify box_five" bindtap="hairstyleEidtClick">
                    <image class="remoed_img" src="../../image/edit.png"></image>
                    <text class="remoed_text">修改编辑</text>
                </view>
            </view>
            <view class="remo_ready">
                <view class="remo_store_words">去店铺前的准备:</view>
                <view class="remo_ready_modle box_twelve">
                    <view class="remorm_words box_eight">
                        <textarea class="remorm_words_text" placeholder-class="remorm_words_pace" placeholder="请输入店铺前的准备" value="{{readyValues}}" maxlength="366" bindinput="readyInput"></textarea>
                    </view>
                </view>
            </view>
            <view class="remo_careful">
                <view class="remo_store_words">到店后您需要注意:</view>
                <view class="remorm_words box_eight">
                    <textarea class="remorm_words_text" placeholder-class="remorm_words_pace" placeholder="请输入店铺前的准备" value="{{carefulValues}}" maxlength="366" bindinput="carefulInput"></textarea>
                </view>
            </view>
        </view>
    </view>
    <view class="message"></view>
</view>
<!-- 功能按钮 -->
<cover-view class="function box_twelve">
    <cover-view class="function_page box_twelve" bindtap="determineClick">
        <cover-view class="function_page_text">确 定</cover-view>
    </cover-view>
</cover-view>