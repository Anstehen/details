@import "../../component/template/template.wxss";
page{
  background: rgba(255, 255, 255, 1);
}
.color{
  width: 100%;
  height: auto;
}
.package{
  width: 100%;
  height: auto;
}
.package_model{
  width: 196rpx;
  height: 248rpx;
  margin: 20rpx;
  position: relative;
}
.selection{
  border: 2rpx solid rgba(255, 115, 117, 0.3);
}
.package_model_img{
  width: 196rpx;
  height: auto;
}
.package_model_delete{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 12rpx;
  right: 12rpx;
}
.pmd_img{
  width: 36rpx;
  height: 36rpx;
}
.message{
  width: 100%;
  height: 166rpx;
}
.choice{
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgba(222,223,227,0.41);
  background: rgba(255, 255, 255, 1);
}
.choice_page{
  width: 91.47%;
  height: 100%;
  margin-left: 4.27%;
}
.chpa_one{
  width:136rpx;
  height:52rpx;
  border-radius:36rpx;
  border:1rpx solid rgba(167,167,167,1);
  font-size:28rpx;
  font-weight:500;
  color:rgba(99,99,99,1);
  line-height:40rpx;
  margin-left: 12rpx;
}
.chpa_active{
  width:138rpx;
  height:54rpx;
  border-radius:36rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(255, 255, 255, 1);
  line-height:40rpx;
  margin-left: 12rpx;
  background:rgba(255, 96, 99, 0.6); 
}
.function{
  width: 100%;
  height: 142rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -2rpx 16rpx 0rpx rgba(222,223,227,0.41);
  position: fixed;
  left: 0;
  bottom: 0;
}
.function_page{
  width: 91.47%;
  height: 86rpx;
  background: rgba(255, 72, 125, 0.6);
  border-radius: 36rpx;
}
.function_page_text{
  margin-left: 12rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:44rpx;
}