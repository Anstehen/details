/* other_pages/reportDetail/reportDetail.wxss */
@import "../../component/template/template.wxss";
page{
  width: 100%;
  height: 100%;
  background: rgba(247, 248, 252, 1);
}
view{
  box-sizing: border-box;
}
.faceImg{
  width: 100%;
  min-height: 300rpx;
  background: #aaffaa;
}

.header{
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  background: #fff;
  border-bottom: 1rpx solid rgba(247, 248, 252, 1);
  font-size: 32rpx;
  text-align-last: center;
}
.cont{
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.cont_title{
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #222;
  font-size: 28rpx;
  font-weight: 500;
}
.cont_text{
  padding: 20rpx;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(0, 0, 0, 0.15);
  line-height: 40rpx;
  font-size: 26rpx;
  background: #fff;
  border-radius: 20rpx;

}
.hairstyleBox{
  background: #fff;
  padding: 30rpx;
}
.hairstyleImg{
  width: 100%;
  min-height: 300rpx;
  background: #aaffaa;
  border-radius: 20rpx;
  overflow: hidden;
}